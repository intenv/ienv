include "/etc/bind/rndc.key";

zone "{{ domain }}" {
    type master;
    file "/etc/bind/db.{{ domain }}";
    allow-update { key rndc-key; };
};
zone "{{ domain }}.arpa" {
    type master;
    file "/etc/bind/{{ domain }}.arpa.zone";
    allow-update { key rndc-key; };
};
