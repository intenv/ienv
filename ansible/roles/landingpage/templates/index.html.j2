    <section id="services" >
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">Список сервисов</h2>
            <hr class="my-4">
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <!-- Сервера -->
              {% for hostName in groups['all'] %}
              {% if hostvars[hostName].service is defined %}
              {% for service in hostvars[hostName].service  %}
              <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                  <a class="" href="{{ service.protocol if service.has_key('protocol') else 'http' }}://{{ service.cname if service.has_key("cname") else hostName }}/"><i class="fa fa-4x {{ service.logo if service.has_key('logo') else 'fa-diamond' }} text-primary mb-3 sr-icons"></i></a>
                  <h3 class="mb-3">{{ service.title if service.has_key("title") else hostName }}</h3>
                  <p>{{ service.description }}</p>
                </div>
              </div>
              {% endfor %}
              {% endif %}
              {% endfor %}
          <!-- END Сервера -->
        </div>
      </div>
    </section>

